<h2>Listing Resource permissions</h2>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Is active</th>
      <th>Is logical deleted</th>
      <th>Started at</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for resource_permission <- @resource_permissions do %>
    <tr>
      <td><%= resource_permission.id %></td>
      <td><%= resource_permission.name %></td>
      <td><%= resource_permission.description %></td>
      <td><%= resource_permission.is_active %></td>
      <td><%= resource_permission.is_logical_deleted %></td>
      <td><%= resource_permission.started_at %></td>

      <td class="text-right">
        <span><%= link "Show", to: resource_permission_path(@conn, :show, resource_permission), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: resource_permission_path(@conn, :edit, resource_permission), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: resource_permission_path(@conn, :delete, resource_permission), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Resource permission", to: resource_permission_path(@conn, :new) %></span>
