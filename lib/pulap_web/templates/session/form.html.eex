<%= form_for @changeset, @action, fn f -> %>

  <%= if @changeset.action || true do %>
   Ooops, something wrong happened.
  <% end %>

  <%= mdc_text_field f, :username %>

  <%= mdc_text_field f, :password, type: "password" %>

  <%= mdc_button f, :sign_in, type: "submit", class: "raised", label: "Sign in" %>
<% end %>
